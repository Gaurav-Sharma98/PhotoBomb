<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:cardBackgroundColor="@color/black"
        android:id="@+id/cardview">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bckgrund"
            android:gravity="center">

            <ImageView
                android:id="@+id/ob_imageview"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/bckgrund"/>
            <ImageView
                android:id="@+id/ob_main"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:paddingTop="50dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/photogallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photogallery"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:layout_below="@+id/cardview"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photogallery"
        android:text="@string/photobombing_is_the_act_of_purposely_putting_oneself_into_the_view_of_a_photograph"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="18sp"/>




</RelativeLayout>